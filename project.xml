<project
    name = "agent-th"
    description = "Grab temperature and humidity data from some-sensor"
    prefix = "th"
    script = "zproject.gsl"
    repository = "https://stash.mbt.lab.etn.com/BIOS/agent-th">

    <include filename = "license.xml" />
    <use project = "czmq" />
    <use project = "malamute" />
    <use project = "core" libname = "biosapi" prefix="biosapi"
        min_major = "0" min_minor = "0" min_patch = "0"
        repository = "https://stash.mbt.lab.etn.com/BIOS/core"
        test = "ymsg_test">
        <use project = "malamute"/>
    </use>

    <class name = "libth">Temperature and humidity lib</class>
    <main name = "agent-th" service = "1" no_config = "1">
        Grab temperature and humidity data from some-sensor
    </main>
</project>
